// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TripOffering {
  id                       Int             @id @default(autoincrement())
  title                    String
  description              String?
  departure_date           DateTime?
  arrival_date             DateTime?
  subtitle                 String?
  price                    Float
  picture_url              String?
  trip_level_id            Int
  trip_level               TripLevel       @relation(fields: [trip_level_id], references: [id])
  TripOfferingTripCategory TripOfferingTripCategory[]

  @@map("trip_offering")
}

model TripCategory {
  id                       Int                        @id @default(autoincrement())
  name                     String
  TripOfferingTripCategory TripOfferingTripCategory[]

  @@map("trip_category")
}

model TripOfferingTripCategory {
  id               Int          @id @default(autoincrement())
  trip_offering_id Int
  trip_category_id Int
  tripOffering     TripOffering @relation(fields: [trip_offering_id], references: [id])
  tripCategory     TripCategory @relation(fields: [trip_category_id], references: [id])

  @@map("trip_offering_trip_category")
}

model TripLevel {
  id           Int            @id @default(autoincrement())
  name         String
  TripOffering TripOffering[]

  @@map("trip_level")
}
